{% extends 'WebAppBundle:Default:layoutNoNav.html.twig' %}

{% block pageTitle %}
    {{ 'title.signin'|trans|capitalize }}
{% endblock %}

{% block content %}
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Learn</b>HUB</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">

            {% if error %}
                {% include 'WebAppBundle:Default/Alerts:dangerAlert.html.twig' with {'errorTitle':'Error','errorMessage': error.messageKey|trans(error.messageData, 'security')} only %}
            {% endif %}

            <p class="login-box-msg">Sign in to start your session</p>

            {{ form_start(loginForm) }}
                <div class="form-group has-feedback">
                    {{ form_widget(loginForm._username, {'attr': {'class':'form-control'}}) }}
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    {{ form_widget(loginForm._password, {'attr': {'class':'form-control'}}) }}
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label class="">
                                {{ form_widget(loginForm._remember) }}
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        {{ form_widget(loginForm.login, {'attr': {'class':'btn btn-primary btn-block btn-flat'}}) }}
                    </div>
                    <!-- /.col -->
                </div>
            {{ form_end(loginForm) }}

            <div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using
                    Facebook</a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign in using
                    Google+</a>
            </div>
            <!-- /.social-auth-links -->

            <a href="#">I forgot my password</a><br>
            <a href="register.html" class="text-center">Register a new membership</a>

        </div>
        <!-- /.login-box-body -->
    </div>
{% endblock %}